html 
head 
title Reg 
body 
include boot.html 
include header.pug 
link(rel="stylesheet", href="./css/style.css")
form.form(action='/form-data' method='post')
  .container
    h1(style="text-align:center") Contact Us
    p(style="text-align:center") Please fill in this form to create an account.
    hr
    label(for='name')
      b Name
    input#name(type='text' placeholder='Enter Name' name='name' required='')
    label(for='email')
      b Email
    input#email(type='email' placeholder='Enter Email' name='email' required='')
    label(for='psw')
      b Password
    input#psw(type='password' placeholder='Enter Password' name='pass' required='')
    label(for='age')
      b Age
    input#age(type='number' placeholder='Enter Age' name='age' required='')
    label(for='city')
      b City
    input#city(type='text' placeholder='Enter City' name='city' required='')
    hr
    p
      | By creating an account you agree to our 
      a(href='#') Terms &amp; Privacy
      | .
    button.registerbtn(type='submit') Submit
  .container.signin
    p
      | Already have an account? 
      a(href='#') Sign in
      | .
include footer.pug